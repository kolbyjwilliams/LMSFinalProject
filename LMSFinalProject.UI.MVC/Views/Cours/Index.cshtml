@model IEnumerable<LMSFinalProject.DATA.EF.Cours>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @if ((User.IsInRole("Admin") || User.IsInRole("Manager")))
    {
        @Html.ActionLink("Create New", "Create")
    }
    @if ((User.IsInRole("Admin") || User.IsInRole("Manager")))
    {
        @Html.ActionLink("Completed Courses", "Index", "CourseCompletions")
    }
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CourseName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CourseDescription)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsActive)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CourseName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CourseDescription)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsActive)
        </td>
        <td>
            @if ((User.IsInRole("Admin") || User.IsInRole("Manager")))
            {
                @Html.ActionLink("Edit", "Edit", new { id = item.CourseId })
            }
            @if ((User.IsInRole("Admin") || User.IsInRole("Manager")))
            {
                @Html.ActionLink("Details", "Details", new { id = item.CourseId })
            }
            @if (User.IsInRole("Manager"))
            {
                @Html.ActionLink("Delete", "Delete", new { id = item.CourseId })
            }
        </td>
    </tr>
}

</table>
